<div>
  <h1>Listing notifications</h1>
  <br>
  <table class="table table-hover table-condensed table-responsive">
    <thead>
      <tr>
        <th>User</th>
        <th>Reminder</th>
        <th>Title</th>
        <th>Text</th>
        <th>Dispatched</th>
        <th>Trigger at</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @notifications.each do |notification| %>
        <tr>
          <td><%= link_to "#{notification.user.name}", user_path(notification.user) if notification.user %></td>
          <td><%= link_to "#{notification.reminder.title}", reminder_path(notification.reminder) if notification.reminder %></td>
          <td><%= notification.title %></td>
          <td><%= notification.text %></td>
          <td><%= notification.dispatched %></td>
          <td><%= notification.trigger_at %></td>
          <td><%= link_to 'Show', notification %></td>
          <td><%= link_to 'Edit', edit_notification_path(notification) %></td>
          <td><%= link_to 'Destroy', notification, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
  <%= link_to 'New Notification', new_notification_path %>
</div>