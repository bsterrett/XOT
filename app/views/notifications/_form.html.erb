<%= form_for(@notification) do |f| %>
  <% if @notification.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@notification.errors.count, "error") %> prohibited this notification from being saved:</h2>

      <ul>
      <% @notification.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :reminder_id %><br>
    <%= f.number_field :reminder_id, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :text %><br>
    <%= f.text_field :text, class: "form-control" %>
  </div>
  <div class="checkbox">
    <%= f.label :dispatched do %>
      <%= f.check_box :dispatched %>
      Dispatched
    <% end %>
  </div>
  <div class="form-group">
    <%= f.label :trigger_at %><br>
    <%= f.datetime_select :trigger_at, class: "form-control" %>
  </div>
  <div class="actions">
    <%= link_to 'Back', :back, class: "btn btn-default" %>
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>
